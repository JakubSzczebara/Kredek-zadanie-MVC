@model IEnumerable<SklepInternetowy.Models.Item>

@{
    ViewData["Title"] = "Sklep";
}
<h1>Oferta</h1>

<h3>Aktualna kategoria: @{
    var number = Model.ElementAt(0).Category;
    // var number = Model.First<Item>().Category;
    }
    @number
</h3>
<a asp-action="Shop">Powrót</a>

<table class="table">
    <thead>
        <tr>
            <th>Numer</th>
            <th>Nazwa</th>
            <th>Cena</th>
            <th>Zdjecie</th>
            <th>Kolor</th>
            <th>Kategoria</th>
            <th>Stan magazynu</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Item in Model)
        {
            <tr>
                <td>@Item.Id</td>
                <td>@Item.Name</td>
                <td>@Item.Price</td>
                <td>
                    <img src="~/images/@Item.Image" style="height: 9rem; width: 15rem" class="round" />
                </td>
                <td>@Item.Color</td>
                <td>@Item.Category</td>
                <td>@Item.Quantity</td>
                <td>
                    @Html.ActionLink("Szczegóły", "ItemDetails", new{id=Item.Id})
                </td>
            </tr>
        }
    </tbody>
</table>